{
	"name": "floodgate",
	"version": "0.0.0",
	"description": "Configurable React component for loading and displaying data.",
	"main": "index.js",
	"repository": "https://github.com/geoffdavis92/floodgate.git",
	"author": "Geoff Davis <geoffdavis92@gmail.com>",
	"license": "MIT",
	"private": false,
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-jest": "^21.2.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-preset-env": "^1.6.0",
		"babel-preset-react": "^6.24.1",
		"jest": "^21.2.1",
		"prettier": "^1.7.4",
		"webpack": "^3.6.0"
	},
	"dependencies": {
		"flow": "^0.2.3",
		"prop-types": "^15.6.0",
		"react": "^16.0.0",
		"react-dom": "^16.0.0"
	},
	"scripts": {
		"flow": "./node_modules/.bin/flow",
		"prettier": "./node_modules/.bin/prettier {.,src,__tests__}/*.{js,json} --write",
		"start": "NODE_ENV=dev ./node_modules/.bin/webpack --watch",
		"test": "jest"
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"browsers": [
							"last 10 versions"
						]
					}
				}
			],
			"react"
		],
		"plugins": [
			"transform-object-rest-spread"
		]
	},
	"jest": {
		"testPathIgnorePatterns": [
			"node_modules"
		]
	},
	"prettier": {
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"parser": "flow",
		"printWidth": 80,
		"semi": true,
		"singleQuote": false,
		"useTabs": true
	}
}
